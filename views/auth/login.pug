extends ../layouts/common.pug

block content
	h1 Login
	
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/auth/login" method="POST")
		.form-group.col-md-4
			label(for="email") Name
			input#email(type="text" name="email" class="form-control" value= values ? values.email : "")
		
		.form-group.col-md-4
			label(for="password") Password
			input#password(type="password" name="password" class="form-control")
		.form-group
			button(class="btn btn-primary ml-2" type="submit") Login