extends ../layouts/common.pug

block content

	h1 Create Product
	if errors
		each error in errors
			.alert.alert-danger= error

	form#product-form(method="POST")
		.form-group.col-md-6
			label(for="name") Product Name
			input#name.form-control(type="text" name="name" value= values ? values.name : "")
		.form-group.col-md-6
			label(for="description") Description
			textarea#description.form-control(rows='3' name="description")= value= values ? values.description : ""
				
		.form-group.col-md-4
			label(for="price") Price
			input#price.form-control(type="number" name="price"  value= values ? values.price : "")
		.form-group.col-md-4
			div#avatar
				img#preview-avatar(src="https://via.placeholder.com/100", alt="avatar" height="100")
			label(for="product-image") Product Image
			input#file-upload.form-control-file(type="file")
		.form-group
			button#submit-form.btn.btn-primary.ml-2(type="submit") Create

block script
	script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
	script(src="/scripts/product.js")