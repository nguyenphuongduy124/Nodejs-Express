extends ../layouts/common.pug

block content
	h1 Create user
	
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create" method="POST")
		.form-group.col-md-4
			label(for="name") Name
			input#name(type="text" name="name" class="form-control" value= values ? values.name : "")
		
		.form-group.col-md-4
			label(for="phone") Phone
			input#phone(type="text" name="phone" class="form-control" value= values ? values.phone : "")
		.form-group
			button(class="btn btn-primary ml-2" type="submit") Create