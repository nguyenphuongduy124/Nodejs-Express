extends ../layouts/common.pug

block content
	h1 Create user
	
	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create" method="POST" enctype="multipart/form-data")
		.form-group.col-md-4
			label(for="name") Name
			input#name.form-control(type="text" name="name" value= values ? values.name : "")
		
		.form-group.col-md-4
			label(for="phone") Phone
			input#phone.form-control(type="text" name="phone"  value= values ? values.phone : "")
		.form-group.col-md-4
			label(for="avatar") Avatar
			input#avatar.form-control-file(type="file" name="avatar" )
		.form-group
			button(class="btn btn-primary ml-2" type="submit") Create