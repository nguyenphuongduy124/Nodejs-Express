extends ../layouts/common.pug

block content
	h1 Edit User
	
	if errors
		each error in errors
			.alert.alert-danger= error

	form#my-form(method="POST")
		.form-group.col-md-4
			label(for="name") Name
			input#name.form-control(type="text" name="name" value= user ? user.name : "")
		.form-group.col-md-4
			label(for="email") Email
			input#email.form-control(type="email" name="email" value= user ? user.email : "")
		.form-group.col-md-4
			label(for="password") Password
			input#password.form-control(type="password" name="password" value= user ? user.password : "")
		.form-group.col-md-4
			label(for="phone") Phone
			input#phone.form-control(type="text" name="phone"  value= user ? user.phone : "")
		.form-group.col-md-4
			div#avatar
				img#preview-avatar(src= user.avatar, alt="avatar" height="100")
			label.font-weight-bold.font-italic(for="avatar") Avatar
			input#file-upload.form-control-file(type="file" name="avatar" )
		.form-group
			button#submit-form.btn.btn-primary.ml-2(type="submit") Update

block script
	script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
	script(src="/scripts/app.js")