extends ../layouts/common.pug

block content
	h1 Edit User
	
	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="POST" enctype="multipart/form-data")
		.form-group.col-md-4
			label(for="name") Name
			input#name.form-control(type="text" name="name" value= user ? user.name : "")
		.form-group.col-md-4
			label(for="email") Email
			input#email.form-control(type="email" name="email" value= user ? user.email : "")
		.form-group.col-md-4
			label(for="password") Password
			input#password.form-control(type="password" name="password" value= user ? user.password : "")
		.form-group.col-md-4
			label(for="phone") Phone
			input#phone.form-control(type="text" name="phone"  value= user ? user.phone : "")
		.form-group.col-md-4
			label(for="avatar") Avatar
			div.mb-2
				img(src="../" + user.avatar, width="100")
			input#avatar.form-control-file(type="file" name="avatar" )
		.form-group
			button(class="btn btn-primary ml-2" type="submit") Update